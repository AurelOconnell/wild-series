{% extends 'base.html.twig' %}

{% block title %}
    {{ program.id }} - Saison {{ season.number }}
{% endblock title %}

{% block body %}
    <h1>Saison {{ season.number }} - {{ season.program.title }}</h1>
    <h2>Résumé de la saison : {{ season.description }}</h2>
    <h3> Liste des épisodes : </h3>

{% for episode in episodes %}
    <p> <a href="{{ path("program_episode_show", {programId: program.id, seasonId: season.id, episodeId: episode.id}) }}">Episode: {{ episode.number }} - {{ episode.title }}</a> </p>
    <p>synopsis: {{ episode.synopsis }}</p>
{% endfor %}
    <a href="{{ path("program_show", { id: program.id }) }}">Retour à la série</a>
{% endblock body %}