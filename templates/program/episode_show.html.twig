{% extends "base.html.twig" %}

{% block title %}
    Episode {{ episode.number }} - Saison {{ season.id }} - {{ program.title }}
{% endblock title %}
    
{% block body %}
    <h1>{{ episode.title }}</h1>
    <h2> Résumé de l'épisode : {{ episode.synopsis }}</h2>

    <a href="{{ path('program_show', {id: program.id}) }}">
        Retour au programme
{% endblock body %}